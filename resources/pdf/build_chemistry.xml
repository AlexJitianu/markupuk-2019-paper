<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="" default="dist">
  <target name="dist"
      xmlns:if="ant:if"
      xmlns:unless="ant:unless">

      <mkdir dir="../../out/"/>

  	<java classname="com.oxygenxml.chemistry.OxygenPDFChemistry" jvmargs="-Djava.awt.headless=true">
          <arg value="-install-dir"/>
          <arg value="${oxygenInstallDir}"/>
          <arg value="-in"/>
          <arg value="${file_location}"/>

          <arg value="-css"/>
          <arg value="${docbook_location}/css/docbook.css"/>
          <arg value="${docbook_location}/css/print.css"/>
          <arg value="resources/pdf/paper.css"/>
          
          <arg value="-out"/>
          <arg value="out/paper.pdf"/>
          
          <arg value="-Dhttp.proxyHost" if:set="http.proxyHost" />
          <arg value="${http.proxyHost}" if:set="http.proxyHost" />
          <arg value="-Dhttp.proxyPort" if:set="http.proxyPort" />
          <arg value="${http.proxyPort}" if:set="http.proxyPort" />
          
          <classpath>
              <file file="${oxygenInstallDir}/lib/oxygen-pdf-chemistry.jar"/>
              <fileset dir="${oxygenInstallDir}/lib">
                  <include name="oxygen-*.jar" />
              </fileset>
              <fileset dir="${oxygenInstallDir}/lib">
                  <include name="**/*.jar" />
              </fileset>
          </classpath>
      </java>
  </target>
</project>